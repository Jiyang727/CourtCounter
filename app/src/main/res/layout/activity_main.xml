<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/team_margin"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="@string/team_a"
                android:textColor="@color/colorTeamName"
                android:textSize="@dimen/team_text_size" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/score_margin_bottom"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/team_a_score"
                android:textColor="@color/colorScore"
                android:textSize="@dimen/score_text_size" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:layout_marginStart="@dimen/button_margin_left"
                android:onClick="addThreeForTeamA"
                android:text="@string/button_a1"
                android:textAllCaps="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:layout_marginStart="@dimen/button_margin_left"
                android:onClick="addTwoForTeamA"
                android:text="@string/button_a2"
                android:textAllCaps="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:layout_marginStart="@dimen/button_margin_left"
                android:onClick="addOneForTeamA"
                android:text="@string/button_a3"
                android:textAllCaps="true" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/team_margin"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/team_margin"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="@string/team_b"
                android:textColor="@color/colorTeamName"
                android:textSize="@dimen/team_text_size" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/score_margin_bottom"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/team_b_score"
                android:textColor="@color/colorScore"
                android:textSize="@dimen/score_text_size" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:layout_marginStart="@dimen/button_margin_left"
                android:onClick="addThreeForTeamB"
                android:text="@string/button_b1"
                android:textAllCaps="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:layout_marginStart="@dimen/button_margin_left"
                android:onClick="addTwoForTeamB"
                android:text="@string/button_b2"
                android:textAllCaps="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:layout_marginStart="@dimen/button_margin_left"
                android:onClick="addOneForTeamB"
                android:text="@string/button_b3"
                android:textAllCaps="true" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/reset_margin_bottom"
        android:onClick="resetScore"
        android:text="@string/button_reset"
        android:textAllCaps="true" />
</RelativeLayout>
